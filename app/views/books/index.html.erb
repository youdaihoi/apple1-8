<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
</table>

<h2>New book</h2>
<%= form_with model:@list, local:true do |f| %>
  <h3>Title</h3>
  <%= f.text_field :title %>

  <h3>Body</h3>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

