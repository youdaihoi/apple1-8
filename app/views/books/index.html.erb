<%= flash[:notice2] %>
<h1>Books</h1>

<table>

  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="tbody">
    <% @books.each do |book| %>
    <tr>
      <td>
        <span><%= book.title %></span>
      </td>
      <td>
        <span><%= book.body %></span>
      </td>
      <td>
        <%= link_to "Show",book_path(book) %>
      </td>
      <td>
        <%= link_to "Edit",edit_book_path(book) %>
      </td>
      <td>
        <%= link_to "Destroy",book_path(book), method: :delete %>
      </td>
    </tr>

  </tbody>
  <% end %>
</table>

<h2>New book</h2>
 <% if @book.errors.any? %>

  <% @book.errors.full_messages.each do |message| %>
  <p>error</p>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model: @book, url:'/books', local:true do |f| %>
  <h3>Title</h3>
  <%= f.text_field :title %>

  <h3>Body</h3>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

