<h2>New book</h2>
<%= form_with model:@list, local:true do |f| %>
  <h3>Title</h3>
  <%= f.text_field :title %>

  <h3>Body</h3>
  <%= f._area :body %>
<% end %>

    <% @lists.each do |list| %>
    <p>
      <span><%= list.title %></span>
    </p>
    <p>
      <span><%= list.body %></span>
    </p>

<%= f.submit'Create Book' %>

<h3 class="title-text"><%= link_to list.title,list_path(list) %></h3>
    <h3 class="body-text"><%= link_to list.body,list_path(list) %></hs>